NAME = ft_ls
LIBFT = libft/libft.a
FILES =  main	parser	error	verif_ft	sort_functions	\
		apply_options lst_ft	display		options 	ft_concat	\
		long_format		little_display
SRC = $(addsuffix .c, $(FILES))

all: $(NAME)

$(NAME): $(SRC)
	cd libft/ && $(MAKE)
	gcc -Wall -Werror -Wextra -o $@ $^ $(LIBFT)
	
clean:
	cd libft/ && $(MAKE) clean
	rm -f $(NAME)

fclean: clean
	rm -f $(LIBFT)

re: clean all